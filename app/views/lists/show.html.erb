<h2><%= @list.name %></h2>
<%= link_to "Add a bookmark", new_list_bookmark_path(params[:id])%>
<p><strong>Bookmarks</strong></p>
<ul class="list-group">
  <% @list.bookmarks.each do |bookmark| %>
    <li class="list-group-item">
    <p><%= bookmark.list.name%> - <%= bookmark.movie.title %></p>
    <p><%= bookmark.movie.overview %></p>
    <%= bookmark.comment %></li>
    <%= link_to "Delete", bookmark_path(bookmark),
        data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
      %>
  <% end %>
</ul>
<br>
<%= link_to "Return to the lists", lists_path%>
