<h2><%= @list.name %></h2>
<%= link_to "Add a bookmark", new_list_bookmark_path(params[:id]) %>
<p><strong>Movies</strong></p>
<div class="container">
  <div class="row">
    <% @list.bookmarks.each do |bookmark| %>
      <div class="col-md-4 mb-4">
        <div class="card-product card">
          <%= image_tag(bookmark.movie.poster_url, alt: bookmark.movie.title, class: "card-img-top") %>
          <div class="card-body">
            <h5 class="card-title"><%= bookmark.movie.title %></h5>
            <p class="card-text"><%= bookmark.movie.overview %></p>
            <p class="card-text"><b>Comment: </b><%= bookmark.comment %></p>
            <%= link_to "Delete", bookmark_path(bookmark), class: "btn btn-danger", data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
<br>
<%= link_to "Return to the lists", lists_path, class: "btn btn-primary" %>
